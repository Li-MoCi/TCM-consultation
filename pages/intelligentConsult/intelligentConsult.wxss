.consult-container {
  padding: 30rpx;
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 标题样式 */
.common-title {
  font-size: 30rpx;
  color: #5d4037;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.common-title::before {
  content: '';
  width: 8rpx;
  height: 30rpx;
  background-color: #b71c1c;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

/* 面色类型选择区 */
.color-list {
  margin-bottom: 35rpx;
}

.color-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.color-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx 15rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.color-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.color-item.active {
  border-color: #b71c1c;
  background-color: #fff8f8;
}

.color-item.active::after {
  content: '✓';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  color: #b71c1c;
  font-size: 24rpx;
  background-color: white;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #b71c1c;
}

.color-dot {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.2);
  border: 4rpx solid white;
}

.color-name {
  font-size: 24rpx;
  color: #5d4037;
  text-align: center;
  line-height: 34rpx;
}

/* 咨询区域 */
.chat-section {
  height: calc(100% - 380rpx);
  display: flex;
  flex-direction: column;
}

.chat-messages {
  flex-grow: 1;
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  overflow-y: auto;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

/* 消息气泡 */
.message {
  max-width: 75%;
  margin-bottom: 25rpx;
  padding: 20rpx 25rpx;
  border-radius: 16rpx;
  position: relative;
  line-height: 40rpx;
  font-size: 26rpx;
  animation: fadeIn 0.3s ease;
}

.message.ai {
  background-color: #f5f5f5;
  color: #5d4037;
  align-self: flex-start;
  border-bottom-left-radius: 6rpx;
}

.message.ai::after {
  content: '';
  position: absolute;
  left: -15rpx;
  top: 20rpx;
  border-width: 15rpx 15rpx 15rpx 0;
  border-style: solid;
  border-color: transparent #f5f5f5 transparent transparent;
}

.message.user {
  background-color: #ffebee;
  color: #b71c1c;
  margin-left: auto;
  border-bottom-right-radius: 6rpx;
}

.message.user::after {
  content: '';
  position: absolute;
  right: -15rpx;
  top: 20rpx;
  border-width: 15rpx 0 15rpx 15rpx;
  border-style: solid;
  border-color: transparent transparent transparent #ffebee;
}

.message-system {
  max-width: 60%;
  margin: 15rpx auto;
  padding: 10rpx 20rpx;
  background-color: #fff8e1;
  color: #e65100;
  font-size: 22rpx;
  text-align: center;
  border-radius: 20rpx;
}

/* 消息头像 */
.message-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.message-row {
  display: flex;
  align-items: flex-start;
}

.message-row.user {
  justify-content: flex-end;
}

.message-row.user .message-avatar {
  margin-right: 0;
  margin-left: 15rpx;
}

/* 输入区域 */
.chat-input {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 15rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.chat-input input {
  flex-grow: 1;
  border: none;
  padding: 18rpx 20rpx;
  font-size: 26rpx;
  color: #333;
  min-height: 70rpx;
  line-height: 36rpx;
}

.chat-input input::placeholder {
  color: #bdbdbd;
}

.send-btn {
  width: 90rpx;
  height: 65rpx;
  line-height: 65rpx;
  background-color: #b71c1c;
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  margin-left: 10rpx;
  transition: all 0.3s ease;
}

.send-btn:not([disabled]):hover {
  background-color: #990000;
}

.send-btn:not([disabled]):active {
  transform: scale(0.95);
}

.send-btn[disabled] {
  background-color: #d7ccc8;
  color: #8d6e63;
}

/* 提示信息 */
.hint {
  text-align: center;
  padding: 60rpx 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  margin-top: 30rpx;
}

.hint-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 25rpx;
  opacity: 0.7;
}

.hint-text {
  font-size: 26rpx;
  color: #795548;
  line-height: 40rpx;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 加载中动画 */
.loading-indicator {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid rgba(121, 85, 72, 0.3);
  border-radius: 50%;
  border-top-color: #795548;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-message {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx;
}

.loading-message .loading-indicator {
  margin-right: 10rpx;
}
