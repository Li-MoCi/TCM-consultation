/* 全局样式 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

.page-container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 顶部标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.logo-area {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #5d4037;
}

.app-description {
  font-size: 26rpx;
  color: #7a7a7a;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(5rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.08);
}

/* 部分头部样式 */
.section-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5d4037;
}

/* 上传区域样式 */
.upload-area {
  padding: 40rpx 30rpx;
  text-align: center;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  margin: 30rpx;
  transition: all 0.3s ease;
  position: relative;
}

.upload-area.has-image {
  border-color: #5d4037;
  background-color: rgba(74, 144, 226, 0.03);
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.upload-tip {
  font-size: 30rpx;
  color: #4a4a4a;
  margin-bottom: 10rpx;
}

.format-tip {
  font-size: 24rpx;
  color: #9b9b9b;
}

/* 图片预览样式 */
.preview-container {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.preview-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.preview-container:hover .preview-overlay {
  opacity: 1;
}

.change-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.change-text {
  color: #fff;
  font-size: 26rpx;
}

/* 表单样式 */
.patient-form {
  padding: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-label {
  width: 200rpx;
  font-size: 28rpx;
  color: #4a4a4a;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
  padding: 10rpx 0;
}

.form-input::placeholder {
  color: #c0c0c0;
}

/* 性别选择器样式 */
.gender-picker {
  flex: 1;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #c0c0c0;
  padding: 10rpx 0;
}

.picker-display.selected {
  color: #1a1a1a;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 提交按钮样式 */
.submit-btn {
  background: linear-gradient(135deg, #4a90e2, #3a7bd5);
  border-radius: 50rpx;
  margin-top: 40rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(5rpx);
  box-shadow: 0 5rpx 10rpx rgba(74, 144, 226, 0.3);
}

.submit-btn[disabled] {
  background: #e0e0e0;
  box-shadow: none;
}

.btn-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 15rpx;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 结果区域样式 */
.result-card {
  margin: 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.08);
}

.result-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f9fafc;
  border-bottom: 1rpx solid #f0f0f0;
}

.color-tag {
  width: 20rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.result-type {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

.confidence-level {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.confidence-text {
  font-size: 24rpx;
  color: #7a7a7a;
  margin-bottom: 5rpx;
}

.confidence-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a90e2;
}

.result-content {
  padding: 30rpx;
}

.result-desc {
  font-size: 28rpx;
  line-height: 1.6;
  color: #4a4a4a;
  margin-bottom: 30rpx;
}

.result-meta {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
  opacity: 0.5;
}

.meta-text {
  font-size: 24rpx;
  color: #7a7a7a;
}

.result-footer {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  background-color: #fff9e6;
  border-top: 1rpx solid #ffe58f;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  margin-top: 5rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #8a6d3b;
  line-height: 1.4;
}

/* 加载状态 */
.submit-btn.disabled {
  background: #e0e0e0 !important;
  box-shadow: none !important;
}

/* .btn-icon.loading {
  animation: rotate 1s linear infinite;
} */

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 结果操作按钮 */
.result-actions {
  display: flex;
  padding: 0 30rpx 30rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4a90e2, #3a7bd5);
  color: #fff;
  box-shadow: 0 5rpx 15rpx rgba(74, 144, 226, 0.3);
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.action-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}