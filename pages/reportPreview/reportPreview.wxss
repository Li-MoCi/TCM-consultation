.report-container {
  padding: 30rpx;
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  background-color: #f8f5f0;
}

/* 标题样式 */
.common-title {
  font-size: 30rpx;
  color: #5d4037;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.common-title::before {
  content: '';
  width: 8rpx;
  height: 30rpx;
  background-color: #b71c1c;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

.sub-title {
  font-size: 24rpx;
  color: #795548;
  margin-bottom: 30rpx;
  display: block;
  padding-left: 23rpx;
}

/* 报告列表 */
.report-list {
  margin-bottom: 30rpx;
}

.no-report {
  background-color: white;
  border-radius: 16rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.no-report-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  opacity: 0.6;
}

.no-report-text {
  font-size: 26rpx;
  color: #795548;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}

.go-detect-btn {
  background-color: #5d4037;
  color: white;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  margin: 0 auto;
  display: block;
  transition: all 0.3s ease;
}

.go-detect-btn:hover {
  background-color: #4e342e;
}

/* 报告项 */
.report-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.report-item:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.report-item.active {
  border-left: 6rpx solid #b71c1c;
  padding-left: 19rpx;
}

.report-info {
  flex-grow: 1;
}

.report-date {
  font-size: 22rpx;
  color: #8d6e63;
  margin-bottom: 5rpx;
  display: block;
}

.report-name {
  font-size: 26rpx;
  color: #5d4037;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.report-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  display: inline-block;
}

.report-actions {
  display: flex;
  gap: 15rpx;
}

.report-btn {
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 22rpx;
  border-radius: 6rpx;
  transition: all 0.2s ease;
}

.view-btn {
  background-color: #f5f5f5;
  color: #5d4037;
}

.download-btn {
  background-color: #fff3e0;
  color: #e65100;
}

.delete-btn {
  background-color: #ffebee;
  color: #b71c1c;
}

.report-btn:active {
  transform: scale(0.9);
}

/* 报告详情卡片 */
.report-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 35rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.08);
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.report-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(90deg, #8d6e63, #d7ccc8, #8d6e63);
}

.report-header {
  text-align: center;
  margin-bottom: 35rpx;
  padding-bottom: 25rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.report-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #5d4037;
  margin-bottom: 15rpx;
  display: block;
  font-family: "楷体", "KaiTi", serif;
}

.report-time {
  font-size: 22rpx;
  color: #8d6e63;
  display: block;
}

/* 报告内容 */
.report-content {
  font-size: 24rpx;
  line-height: 44rpx;
  color: #555;
}

.result-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx dashed #f5f5f5;
}

.color-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.2);
}

.result-type {
  font-size: 30rpx;
  font-weight: bold;
  color: #5d4037;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #5d4037;
  margin: 30rpx 0 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #b71c1c;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.info-item {
  background-color: #f9f9f9;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
}

.info-label {
  color: #795548;
  margin-right: 10rpx;
}

.suggest-content {
  background-color: #f9f9f9;
  padding: 25rpx;
  border-radius: 8rpx;
  line-height: 44rpx;
}

.suggest-content p {
  margin-bottom: 15rpx;
}

.suggest-content p:last-child {
  margin-bottom: 0;
}

/* 报告底部 */
.report-footer {
  margin-top: 40rpx;
  padding-top: 25rpx;
  border-top: 2rpx solid #f5f5f5;
  text-align: center;
  font-size: 22rpx;
  color: #8d6e63;
  line-height: 36rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  transition: all 0.3s ease;
  font-weight: 500;
}

.download-report {
  background-color: #b71c1c;
  color: white;
  box-shadow: 0 6rpx 12rpx rgba(183, 28, 28, 0.2);
}

.download-report:hover {
  background-color: #990000;
}

.share-report {
  background-color: #5d4037;
  color: white;
  box-shadow: 0 6rpx 12rpx rgba(93, 64, 55, 0.2);
}

.share-report:hover {
  background-color: #4e342e;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: none;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.report-card {
  animation: fadeIn 0.5s ease;
}
